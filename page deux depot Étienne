const video = document.getElementById("myVideo");

// â–¶ Lecture / pause au clic
video.addEventListener("click", () => {
  if (video.paused) {
    video.play();
  } else {
    video.pause();
  }
});

// â›” Pause automatique quand la vidÃ©o sort du viewport
function checkVideoVisibility() {
  const rect = video.getBoundingClientRect();
  const visible = rect.top >= 0 && rect.bottom <= window.innerHeight;

  if (!visible) {
    video.pause();
  }
}

// VÃ©rifie la visibilitÃ© Ã  chaque scroll
window.addEventListener("scroll", checkVideoVisibility);
function showDetails(id) {
  document.getElementById('bourseContainer').style.display = 'none';
  document.getElementById('detailsContent').innerHTML = ateliers[id].contenu;
  document.getElementById('detailsSection').style.display = 'block';
  document.getElementById('atelierTitle').textContent = ateliers[id].titre;
}

function stopAllVideos() {
  const videos = document.querySelectorAll("video, iframe");

  videos.forEach(v => {
    // ğŸ”¹ Pause des balises <video>
    if (v.tagName.toLowerCase() === "video") {
      v.pause();
      v.currentTime = 0; // remets Ã  zÃ©ro si tu veux
    }

    // ğŸ”¹ Stop des <iframe> vidÃ©os (WhatsApp, MP4 embarquÃ©)
    if (v.tagName.toLowerCase() === "iframe") {
      const src = v.src;
      v.src = "";   // stop la vidÃ©o
      v.src = src;  // recharge proprement
    }
  });
}

function goBack() {
  stopAllVideos(); // ğŸ‘‰ coupe toute vidÃ©o encore en lecture

  document.getElementById('detailsSection').style.display = 'none';
  document.getElementById('bourseContainer').style.display = 'block';
}
